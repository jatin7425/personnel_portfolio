{
  "plugins": ["unused-imports", "@typescript-eslint", "react", "next"],
  "extends": [
    "next/core-web-vitals",
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended",
    "plugin:react/recommended"
  ],
  "rules": {
    // Fully remove unused imports
    "unused-imports/no-unused-imports": "error",

    // Allow unused vars prefixed with "_" (common for ignore)
    "unused-imports/no-unused-vars": [
      "warn",
      { "vars": "all", "varsIgnorePattern": "^_", "argsIgnorePattern": "^_" }
    ],

    // Catch real unused vars, but allow `_ignored`
    "@typescript-eslint/no-unused-vars": [
      "error",
      {
        "argsIgnorePattern": "^_",
        "varsIgnorePattern": "^_"
      }
    ],

    // Safer typing rules
    "@typescript-eslint/no-explicit-any": "warn",
    "@typescript-eslint/ban-ts-comment": "warn",

    // Fix React lint conflicts
    "react/no-unescaped-entities": "off", // avoid `'` escaping mess
    "react-hooks/exhaustive-deps": "warn"
  }
}
